{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npx prisma generate && next build",
  "installCommand": "npm install",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/twilio/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/voice/**/*.ts": {
      "maxDuration": 300
    },
    "src/app/api/calls/**/*.ts": {
      "maxDuration": 10
    },
    "src/app/api/stats/**/*.ts": {
      "maxDuration": 10
    },
    "src/app/api/health/**/*.ts": {
      "maxDuration": 10
    }
  },
  "crons": [],
  "headers": [
    {
      "source": "/api/twilio/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, X-Twilio-Signature"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
