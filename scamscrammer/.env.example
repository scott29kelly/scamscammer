# ScamScrammer Environment Variables

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/scamscrammer"

# Authentication
# Set a strong password for dashboard access
DASHBOARD_PASSWORD="your-secure-password-here"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"

# AWS S3 Configuration (for recordings storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="scamscrammer-recordings"
AWS_REGION="us-east-1"

# Node Environment
NODE_ENV="development"
