# ScamScrammer Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# =============================================================================
# DATABASE - PostgreSQL Connection
# =============================================================================
# Connection string for PostgreSQL database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# For Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# For Neon: postgresql://[USER]:[PASSWORD]@[HOST]/[DATABASE]?sslmode=require
DATABASE_URL="postgresql://postgres:password@localhost:5432/scamscrammer?schema=public"

# =============================================================================
# TWILIO - Voice Call Integration
# =============================================================================
# Find these at https://console.twilio.com/
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-auth-token-here"

# Your Twilio phone number for receiving calls (E.164 format)
TWILIO_PHONE_NUMBER="+1234567890"

# =============================================================================
# OPENAI - Realtime Voice API
# =============================================================================
# Get your API key at https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Model for realtime voice (default: gpt-4o-realtime-preview)
OPENAI_REALTIME_MODEL="gpt-4o-realtime-preview"

# =============================================================================
# AWS S3 - Recording Storage
# =============================================================================
# AWS credentials for S3 storage
# Create an IAM user with S3 access at https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID="AKIAIOSFODNN7EXAMPLE"
AWS_SECRET_ACCESS_KEY="wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"
AWS_REGION="us-east-1"

# S3 bucket for storing call recordings
AWS_S3_BUCKET="scamscrammer-recordings"

# =============================================================================
# APPLICATION - General Settings
# =============================================================================
# Node environment (development, production, test)
NODE_ENV="development"

# Base URL of your application (used for webhooks)
# In development: http://localhost:3000
# In production: https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# AUTHENTICATION (Optional - for dashboard protection)
# =============================================================================
# Secret for NextAuth.js sessions (generate with: openssl rand -base64 32)
# AUTH_SECRET="your-nextauth-secret-here"

# Optional: Admin credentials for simple auth
# ADMIN_USERNAME="admin"
# ADMIN_PASSWORD="your-secure-password-here"

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
# Sentry DSN for error tracking (optional)
